{{! from edit }}
<form class='mt-4' method='POST' action='/songs/{{song._id}}?_method=PUT'>
    <h1>Update the song</h1>
    <div class='mb-3'>
        <label for='description'>Name</label>
        <input type='text' class='form-control' value='{{song.name}}' id='name' name='name' />
    </div>
    <div class='mb-3'>
        <label for='description'>Singer</label>
        <input type='text' class='form-control' value='{{song.singer}}' id='singer' name='singer' />
    </div>
    <div class='mb-3'>
        <label for='description'>Description</label>
        <input type='text' class='form-control' value='{{song.description}}' id='description' name='description' />
    </div>
    <div class='mb-3'>
        <label for='description'>Video id</label>
        <input type='text' class='form-control' value='{{song.videoId}}' id='videoId' name='videoId' />
    </div>
    <button type='submit' class='btn btn-primary'>Save</button>
</form>