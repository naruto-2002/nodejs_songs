<form class='mt-4' method='POST' action='/songs/store'>
    <h1>Create a new song</h1>
    <div class='mb-3'>
        <label for='description'>Name</label>
        <input type='text' class='form-control' id='name' name='name' />
    </div>
    <div class='mb-3'>
        <label for='description'>Singer</label>
        <input type='text' class='form-control' id='singer' name='singer' />
    </div>
    <div class='mb-3'>
        <label for='description'>Description</label>
        <input type='text' class='form-control' id='description' name='description' />
    </div>
    <div class='mb-3'>
        <label for='description'>Video id</label>
        <input type='text' class='form-control' id='videoId' name='videoId' />
    </div>
    <button type='submit' class='btn btn-primary'>Create</button>
</form>